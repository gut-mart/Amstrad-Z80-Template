{
    "version": "2.0.0",
    "tasks": [
        {
            // 3. TAREA PRINCIPAL Y POR DEFECTO
            // Esta es la tarea que ejecutarás con Ctrl+Shift+B.
            "label": "Compilar y Ejecutar",
            "dependsOn": [
                "Ensamblar",
                "Empaquetar y Ejecutar"
            ],
            // "sequence" asegura que las tareas se ejecutan en orden.
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Esta tarea principal no genera errores por sí misma, solo coordina.
            "problemMatcher": []
        },
        {
            // 1. TAREA DE ENSAMBLADO
            // Se dedica únicamente a compilar el fuente de ASM.
            "label": "Ensamblar",
            "type": "shell",
            "command": "sjasmplus",
            "args": [
                "${workspaceFolder}/src/main.asm",
                "--raw=${workspaceFolder}/build/main.bin",
                "--lst=${workspaceFolder}/build/main.lst",
                "--sym=${workspaceFolder}/build/main.sym"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            // El detector de errores solo se aplica aquí, donde se compila.
            "problemMatcher": [
                "$errmatcher-sjasmplus"
            ]
        },
        {
            // 2. TAREA PARA CREAR DISCO Y EMULAR
            // Ejecuta el script que ya hemos mejorado.
            "label": "Empaquetar y Ejecutar",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/create_dsk.sh",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            // No necesita un detector de errores de ensamblado.
            "problemMatcher": []
        }
    ]
}