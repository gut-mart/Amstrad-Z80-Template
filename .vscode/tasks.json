{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ensamblar con sjasmplus",
            "type": "shell",
            "command": "sjasmplus",
            "args": [
                "--fullpath",
                "${workspaceFolder}/src/main.asm",
                "--raw=${workspaceFolder}/build/main.bin",
                "--lst=${workspaceFolder}/build/main.lst",
                "--sym=${workspaceFolder}/build/main.sym",
                "--sld=${workspaceFolder}/build/main.sld"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$errmatcher-sjasmplus"
            ]
        },
        {
            "label": "Build + DSK",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build_all.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build + DSK + WinAPE (autorun)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build + DSK",
                "Lanzar WinAPE (autorun)"
            ],
            "problemMatcher": []
        },
        {
            "label": "Crear DSK",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/create_dsk.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Lanzar WinAPE",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/launch_winape.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Lanzar WinAPE (autorun)",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/launch_winape.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "WINAPE_AUTORUN": "1"
                }
            },
            "problemMatcher": []
        }
    ]
}
