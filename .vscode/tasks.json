{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ensamblar con sjasmplus",
            "type": "shell",
            "command": "sjasmplus",
            "args": [
                "--fullpath",
                "${workspaceFolder}/src/main.asm",
                "--raw=${workspaceFolder}/build/main.bin",
                "--lst=${workspaceFolder}/build/main.lst",
                "--sym=${workspaceFolder}/build/main.sym",
                "--sld=${workspaceFolder}/build/main.sld"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$errmatcher-sjasmplus"
            ]
        },
        {
            "label": "Build + DSK",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_all.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Crear DSK",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/create_dsk.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Lanzar WinAPE",
            "type": "shell",
            "command": "wine",
            "args": [
                "/home/isidro/Datos/Z80/cpctelera/cpctelera/tools/winape/WinApe.exe",
                "z:disco.dsk",
                "/A:main.bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        }
    ]
}
